<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.inclusive.finance.jh.bean.model.ApplyModel" />

        <import type="android.view.View" />
    </data>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_14"
        app:singleLine="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_baseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="基本信息"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"
            app:closeIconVisible="true"
            tools:chipStrokeWidth="0dp"
            tools:closeIconTint="@color/MaterialGrey500" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="信贷历史"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"
            app:closeIconVisible="true"
            tools:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_applyCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="申请贷款信息"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"
            app:closeIconVisible="true"

            tools:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="共同借款人和担保人的信息"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"
            app:closeIconVisible="true"

            tools:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_inspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="担保人资格检查"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"

            app:closeIconVisible="true"
            tools:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="第三方评价"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"
            app:closeIconVisible="true"

            tools:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="贷款资格审查"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"
            app:closeIconVisible="true"

            tools:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_finance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="申请人财务报表情况"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"
            app:closeIconVisible="true"

            tools:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/bt_conclusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="风险因素分析及调查结论"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_white_gray"
            app:chipCornerRadius="@dimen/dp_5"
            app:chipStrokeColor="@color/line"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_check_circle_16"
            app:closeIconVisible="true"

            tools:chipStrokeWidth="0dp" />
    </com.google.android.material.chip.ChipGroup>
</layout>